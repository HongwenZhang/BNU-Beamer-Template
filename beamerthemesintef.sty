\def\@courseLabel{}
\def\@IDnumber{}

\newcommand{\course}[1]{\def\@courseLabel{#1}}
\newcommand{\IDnumber}[1]{\def\@IDnumber{#1}}

% Define the title page
\setbeamertemplate{title page}{%
  % Add BNU logo at bottom left using TikZ overlay
  \begin{tikzpicture}[remember picture, overlay]
    \node[anchor=south west, inner sep=0pt] at ($(current page.south west)+(0.5cm,0.5cm)$) {
      \includegraphics[width=0.35\paperwidth]{assets/bnu-logo-name.png}
    };
  \end{tikzpicture}
  \vskip0pt plus 1filll%
  % Title text on the right side without background block
  \hfill
  \vspace{20mm}
  \begin{minipage}[t]{0.6\textwidth}
    \raggedleft
    {\usebeamercolor[fg]{title}\usebeamerfont{title}\inserttitle}
    
    \vspace{2mm}
    {\usebeamercolor[fg]{subtitle}\usebeamerfont{subtitle}\insertsubtitle}

    \vspace{2mm}
    {\usebeamercolor[fg]{subtitle}\usebeamerfont{subtitle}\@courseLabel}
    
    \vspace{4mm}
    {\usebeamercolor[fg]{author}\usebeamerfont{author}\textbf{\insertauthor} \ifdefempty{\@IDnumber}{}{(\@IDnumber)}}
  
    \vspace{2mm}
    {\usebeamercolor[fg]{date}\usebeamerfont{date}\insertdate}
  \end{minipage}
  \hspace{1cm}
}

% Define slide splitting dimensions (e.g. title and chapter slides)
\newcommand{\TikzSplitSlide}[1]{%
  \begin{tikzpicture}[remember picture, overlay]
    % Clip region with diagonal edge (reversed slope)
    \clip (current page.north west) -- 
          ($(current page.north west)!0.3!(current page.north east)$) -- 
          ($(current page.south west)!0.5!(current page.south east)$) -- 
          (current page.south west) -- cycle; 
    \node[anchor=center] at ($(current page.west)!0.25!(current page.east)$) {%
      \includegraphics[height=\paperheight]{#1}%
    };
  \end{tikzpicture}
}

\newbool{splittitle}
\newcommand{\@TitleBackground}{}
\newcommand{\titlebackground}{\@ifstar{\SplitBackground}{\FullBackground}}
\newcommand{\FullBackground}[1]{\renewcommand{\@TitleBackground}{#1}}
\newcommand{\SplitBackground}[1]{%
	\booltrue{splittitle}%
	\renewcommand{\@TitleBackground}{#1}%
}

% Overwrite the maketitle command for the title page
\renewcommand{\maketitle}{
\begingroup
  \ifdefempty{\@TitleBackground}{}{% Skip if \@TitleBackground is empty
    \setbeamertemplate{background}{%
      \ifbool{splittitle}{%
        \TikzSplitSlide{\@TitleBackground}
      }{% Normal, full-screen background
        \includegraphics[height=\paperheight]{\@TitleBackground}
      }
    }
  }
  % Add BNU logo at bottom right on title page using TikZ overlay
  \setbeamertemplate{footline}{}
  \begin{frame}%
  \titlepage%
  \end{frame}%
\endgroup
}

